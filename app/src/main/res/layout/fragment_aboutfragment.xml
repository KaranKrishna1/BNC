<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".aboutfragment"
    tools:ignore="ExtraText,SpeakableTextPresentCheck"
    android:padding="10dp"
    android:background="@drawable/back_gro_und">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:padding="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B N College"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description ::"
            android:layout_marginTop="23dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overview of B N College from students point of view."
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developers Information ::"
            android:textStyle="bold"
            android:layout_marginTop="23dp"
            />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_marginLeft="20dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="30dp"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/developer1"
                    />

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Karan Krishna"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LinkedIn : Click Here"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="30dp"
                />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_marginLeft="20dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="30dp"
                app:cardCornerRadius="40dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/developer2"
                    />

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Umesh Pathak"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LinkedIn : Click Here"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="30dp"
                />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_marginLeft="20dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="30dp"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/developer3"
                    />

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ashish Kumar"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LinkedIn : Click Here"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="30dp"
                />
        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_marginLeft="20dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="30dp"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pragya Rai"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LinkedIn : Click Here"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="30dp"
                />
        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="androidx.cardview:cardview:1.0.0"
            android:layout_marginTop="23dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="com.github.denzcoskun:ImageSlideshow:0.1.2"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="com.google.firebase:firebase-auth:22.3.1"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            />

    </LinearLayout>extSize="60dp"
        />
</ScrollView>