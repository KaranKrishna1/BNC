<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home3"
    android:padding="16dp"
    tools:context=".ResetPassword">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="TODO"
        android:padding="5dp"
        android:src="@drawable/back"
        tools:ignore="ContentDescription,HardcodedText,TouchTargetSizeCheck" />


    <TextView
        android:layout_width="334dp"
        android:layout_height="96dp"
        android:gravity="center"
        android:text="You forgot it !!\nDon't worry, we have an option for you"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:padding="18dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        tools:ignore="HardcodedText"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:autofillHints="" />

    <Button
        android:id="@+id/buttonResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:backgroundTint="#5DA9E9"
        android:padding="15dp"
        android:textColor="@drawable/button_text_focus_reverse"
        android:textSize="20sp"
        android:text="Reset Password"
        tools:ignore="HardcodedText" />

</RelativeLayout>